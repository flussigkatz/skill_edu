<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skill_edu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Skill_edu.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.Skill_edu.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Skill_edu.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#B10202</item>
        <item name="colorPrimaryVariant">#1AFF00</item>
        <item name="colorPrimaryDark">#C5B900</item>
        <item name="colorAccent">#FF9900</item>
        <item name="colorOnBackground">@color/teal_200</item>
        <item name="colorOnPrimary">#48005C</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnSurface">#FFEB3B</item>
    </style>

    <style name="MyTheme.ButtonStyle" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@android:color/holo_orange_light</item>
    </style>
</resources>