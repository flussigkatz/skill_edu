<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.example.skill_edu.Converter" />

        <import type="com.example.skill_edu.User" />

        <variable
            name="user"
            type="androidx.databinding.ObservableField&lt;User>" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="numberDecimal"
            android:text='@={(Converter.doubleToString(user.cashObservable))}'
            android:textSize="32sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="numberDecimal"
            android:text='@={Converter.doubleToString(Converter.rubToDol(user.cashObservable))}'
            android:textSize="32sp" />

    </LinearLayout>
</layout>
